
//====================================================
//  Catalan valencian - based on Catalan (and Spanish and Base2)
//====================================================

// vowels 
//=============

phoneme a
  vwl starttype #a endtype #a
  length 180
  IF thisPh(isWordEnd) THEN
    ChangeIfUnstressed(E)
  ENDIF
  FMT(vowel/a_6)
endphoneme

phoneme a2 // a que no es neutralitza
  vwl starttype #a endtype #a
  length 180
  FMT(vowel/a_6)
endphoneme

phoneme e
  vwl starttype #e endtype #e
  length 170
  
  IF thisPh(isWordStart) THEN
    IF nextPh(s) OR nextPh(n) THEN
        ChangeIfUnstressed(a)
    ENDIF
  ENDIF
  FMT(vowel/e)
endphoneme

phoneme e2 // don't reduce + change if tressed: "aeri" vs "aer√≤drom".
  vwl starttype #e endtype #e
  length 170
  FMT(vowel/e)
endphoneme

phoneme E
  vwl starttype #e endtype #e
//  fnt unr sml
  length 180
  
  IF thisPh(isWordStart) AND nextPh(s) OR nextPh(n) THEN
    ChangeIfUnstressed(a)
  ELSE
    ChangeIfUnstressed(e)
  ENDIF
  FMT(vowel/e_mid)
endphoneme

phoneme E2    // don't reduce
  vwl starttype #e endtype #e
  length 180
  ChangeIfUnstressed(e2)
  FMT(vowel/e_mid)
endphoneme

phoneme O
  vwl starttype #o endtype #o
  length 170
  IF thisPh(isUnstressed) THEN
    IF thisPh(isWordStart) THEN 
        ChangePhoneme(aw)
    ELIF nextVowel(isStressed) OR prevPh(dZ) OR prevPh(Z) THEN
        ChangePhoneme(u)
    ELSE
        ChangePhoneme(o)
    ENDIF
  ENDIF
  FMT(vowel/oo)
endphoneme

phoneme o
  vwl starttype #o endtype #o
  length 170
  IF thisPh(isUnstressed) THEN
    IF thisPh(isWordStart) THEN 
        ChangePhoneme(aw)
    ELIF nextVowel(isStressed) OR prevPh(dZ) OR prevPh(Z) THEN
        ChangePhoneme(u)
    ENDIF
    
  ENDIF
  FMT(vowel/o)
endphoneme

phoneme aw // revisar
  vwl starttype a endtype w
  length 170
  ipa aw
//  FMT(vowel/a)
endphoneme

phoneme o2
  vwl starttype #o endtype #o
  length 170
  ChangeIfStressed(o)
  FMT(vowel/o)
endphoneme

phoneme u
  vwl starttype #u endtype #u
  length 160
  FMT(vowel/u_bck)
endphoneme

//================ apitxats

phoneme Z // plea**s**ure
  vcd pla frc sib
  voicingswitch S
  lengthmod 6
  Vowelin  f1=0  f2=2000 0 300  f3=-200 80
  Vowelout f1=2  f2=2000 0 300  f3=-200 80 brk

  ChangePhoneme(dZ)
endphoneme

phoneme S // **sh**op
  vls pla frc sib
  voicingswitch Z
  lengthmod 3
  Vowelin  f1=0  f2=2100 100 300  f3=-100 80
  Vowelout f1=0  f2=2100 100 300  f3=-100 80

  IF prevPh(i) OR prevPh(j) THEN
  ELSE
    ChangePhoneme(tS)
  ENDIF
  WAV(ufric/sh)
endphoneme
