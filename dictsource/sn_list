// Pronouns

ini   $u      // I
iwe	  $u      // You
iye   $u      // he, she, it
isu   $u      // we
imi   $u      // you
ivo   $u      // they


// Possesive Pronouns

changu  $u         // my, mine
chako   $u         // your, yours
chake   $u         // his, her, its
chedu   $u         // our, ours
chenyu  $u         // your, yours
chavo   $u         // their, theirs


// Conjunctions

uye  $u $pause   // and
kana  $u $pause  // if, or
asi  $u $pause   // but
nokuti $u $pause  // because
kuti $u $pause   // that
nepo $u $pause   // while
sezvo $u $pause  // since, because


// Prepositions

pa   $u $brk   // on, at, in
mu   $u $brk   // in, inside
ne   $u $brk   // with, by
kuna $u $brk   // to, toward
ku   $u $brk   // to, at
(pamusoro pa) pamus,orop,a $u $brk   // on top of
(pasi pa) p,asip,a $u $brk  // under, beneath
(mberi kwa)  m-b,erikw,a $u $brk  // in front of
(shure kwa)  S,urekw,a $u $brk  // behind
(pasi pe) p,asip,e $u $brk  // below


