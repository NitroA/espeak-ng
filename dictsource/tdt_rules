// This file is UTF8 encoded 
// Tetun Dili Spelling-to-phoneme rules. This assumes inconsistent spelling, ignores glottals, accepts Portuguese, Indonesian and English spelling where it doesn’t conflict with Tetun (e.g. for “q”, “ff”. Double vowels convert to stressed vowels.

// Letter groups (for Portuguese rules)
// A  a vowel
// B  a consonant, except h l r w y
// C  a consonant
// G  a voiced consonant
// K  not a vowel

.group a
        a        a
        á        ''a
        à        ''a  // Portuguese
        aa       ''a
        ae       aE
        ai       aI
        ao       aO
        au       au

.group ã // Portuguese
        ã          aN
        ão         auN

.group b
        b        b

.group c // Portuguese
     _) c (_       se
        c          k
        c (Y       s         // ce ci
        c (B       kI
        c (s       k
        c (t       k
        c (_C      k_
        ch         S
        chr        kr
        ck         k
       c (c               //drop “c” (eg: seleccionar)
   A) ct         t         //drop “c” (eg: exacto)
   A) cç         s         //drop “c” in European Portuguese (eg: selecção)
 conta) ct (A      kt        // eg: contacto, contactar, contactável, incontactável, etc...

.group d
        d        d

.group e
        e        E
        é        ''E
        ea       Ea
        ee       ''E
        ei       ei
        eo       EO
        eu       eu
        _) e (_      i // Portuguese “and”

