// This file is UTF8 encoded
// Translation rules for Belarusian

//letter which can carry vowel phoneme
.L01 а е ё і о у ы э ю я
//letter which can carry consonant phoneme
.L02 б в г д ж з й к л м н нн п р с сс т ф х ц ч ш
//letter which can carry forward sibilant (like с)
//.L03 з дз с ц
//letter which can carry backward sibilant (like ш)
//.L04 ж дж ш ч

// This is more economic way to express assimilation by sibilation than using L03 and L04
.replace
       сш     шш
       сч     шч
       цч     чч
       шс     сс
       шц     сц
       чц     цц
       зж     жж
       здж    ждж
       жз     зз
       ждз    здз

.group а
       а       a

.group б
       б       b

.group в
       в       v

.group г
       г       Q     // ɣ

.group д
       д       d[
       дз      dz  // d̻͡z̪
       ддз     dz:
       дж      dz. // ɖ͡ʐ

.group е
       е       ;E    // ʲɛ
    _) е       jE
    ') е       jE
    ь) е       jE
  L01) е       jE

.group ё
       ё       ;'O    // ʲɔ
    _) ё       j'O
    ') ё       j'O
    ь) ё       j'O
  L01) ё       j'O

.group ж
       ж       z.    // ʐ
       жж      z.:

.group з
       з       z

.group і
       і       i
  L02) і       ;i

.group й
       й       j

.group к
       к       k

.group л
       л       l
       лл      l:

.group м
       м       m

.group н
       н       n
       нн      n:

.group о
       о       'O

.group п
       п       p

.group р
       р       R

.group с
       с       s
       сс      s:

.group т
       т       t[

.group у
       у       u

.group ў
       ў       w

.group ф
       ф       f

.group х
       х       x

.group ц
       ц       ts    // t̻͡s̪
       цц      ts:

.group ч
       ч       ts.   // ʈ͡ʂ
       чч      ts.:

.group ш
       ш       s.    // ʂ
       шш      s.:

.group ы
       ы       i"    // (ɨ

.group ь
       ь       ;     // ʲ

.group э
       э       E     // ɛ

.group ю
       ю       ;u    // ʲu
    _) ю       ju
    ') ю       ju
    ь) ю       ju
  L01) ю       ju

.group я
       я       ;a    // ʲa
    _) я       ja
    ') я       ja
    ь) я       ja
  L01) я       ja

.group '
       '
