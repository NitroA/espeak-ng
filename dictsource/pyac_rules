
// This file is UTF8 encoded 
// Spelling to phoneme rules for Pyash (an artificial constructed language).

// Note: initial/final "." has already been removed

.group a
	a	a
     X) a (_	,a	// single-syllable cmavo are unstressed

.group b
	b	b
	b (C	b_

.group c
	c	S
     K) c (C    S_!

.group d
	d	d
	dj	dZ  // ??

.group e
	e	e
     X) e (_	,e

.group f
	f	f

.group g
	g	g

     _) gi ('A_  _;_gi

.group h
	h	h

.group i
	i	i
     X) i (_	,i

.group j
	j	Z

.group k
	k	k

.group l
	l	l-  // syllabic
     A) l       l
	l (A    l

.group m
	m	m

.group n
	n	n-   // syllabic
     A) n       n
        n (A    n
	n (g	N
	n (k	N

.group o
	o	o
     X) o (_	,o

.group p
	p	p

.group q
	q	N

.group r
	r	r-  // syllabic
     A) r	R
	r (A	R
	r (C	R_   // ?? do this in phonemes data instead?


.group s
	s	s

.group t
	t	t
	tc	tS

.group u
	u	u
	u (A	w
     X) u (_	,u
     X) u (A_	,w

.group v
	v	v

.group w
	w	w

.group x
